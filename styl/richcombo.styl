@import 'nib'
@import 'constants'

.cke_combo
  display: inline-block
  float: left

.cke_rtl .cke_combo
  float: right

.cke_combo_label
  display: none
  float: left
  line-height: 26px
  vertical-align: top
  margin-right: 5px
  filter: 'alpha(opacity = 70)'
  opacity: 0.7

.cke_rtl .cke_combo_label
  float: right
  margin-left: 5px
  margin-right: 0

.cke_combo_button
  display: inline-block
  border-radius: 5px
  background: -webkit-gradient(linear, left bottom, left -100, from(#fff), to(#d3d3d3))
  float: left
  padding: 2px 4px 2px 6px
  height: 22px
  margin: 0 5px 5px 0

a.cke_combo_button:hover,
a.cke_combo_button:focus,
a.cke_combo_button:active
  background: #DFF1FF
  outline: none

.cke_rtl .cke_combo_button
  float: right
  margin-left: 5px
  margin-right: 0

.cke_hc .cke_combo_button
  border: 1px solid black
  padding: 1px 3px 1px 3px

.cke_hc .cke_rtl .cke_combo_button
  border: 1px solid black

.cke_combo_text
  line-height: 24px
  text-overflow: ellipsis
  overflow: hidden
  color: #666666
  float: left
  cursor: default

.cke_rtl .cke_combo_text
  float: right
  text-align: right

.cke_combo_inlinelabel
  font-style: italic
  opacity: 0.70

a.cke_combo_button:hover .cke_combo_inlinelabel
  opacity: 1

.cke_combo_open
  cursor: default
  display: inline-block
  font-size: 0
  height: 19px
  line-height: 17px
  margin: 1px 3px
  width: 5px

.cke_combo_arrow
  margin: 9px 0 0
  float: left
  opacity: 0.70
  height: 0
  width: 0
  font-size: 0
  border-left: 3px solid transparent
  border-right: 3px solid transparent
  border-top: 3px solid #2f2f2f

.cke_hc .cke_combo_arrow
  font-size: 10px
  width: auto
  border: 0
  margin-top: 4px

